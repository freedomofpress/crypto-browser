{
  "name": "@freedomofpress/crypto-browser",
  "version": "0.1.3",
  "description": "Browser-compatible cryptography utilities.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:browser": "vitest run --config vite.config.playwright.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cryptography",
    "asn1",
    "x509",
    "encoding",
    "browser",
    "webcrypto",
    "sigstore"
  ],
  "author": "Giulio B. and Sacha Servan-Schreiber",
  "license": "Apache-2.0",
  "dependencies": {
    "@noble/curves": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.49.1",
    "typescript": "^5.0.0",
    "vite": "^6.0.7",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@noble/curves": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freedomofpress/crypto-browser.git"
  },
  "files": [
    "dist"
  ]
}
